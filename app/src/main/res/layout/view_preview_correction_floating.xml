<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_window_background"
    android:padding="16dp"
    android:alpha="0.92">

    <!-- 标题栏（可拖动）+ 关闭按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_drag_handle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="预览画面矫正"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="×"
            android:textSize="16sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <!-- 摄像头选择（按钮组） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btn_cam_front"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="前"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_accent"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cam_back"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="后"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btn_cam_left"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="左"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btn_cam_right"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="右"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <!-- ScaleX -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="ScaleX"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_scale_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_scale_x"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="1.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ScaleY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="ScaleY"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_scale_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_scale_y"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="1.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- TranslateX -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="TransX"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_translate_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_translate_x"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- TranslateY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="TransY"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_translate_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_translate_y"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="恢复默认"
            android:textSize="14sp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_reset_all"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="全部重置"
            android:textSize="14sp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

</LinearLayout>
