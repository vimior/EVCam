<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_window_background"
    android:padding="16dp"
    android:alpha="0.92">

    <!-- 标题栏（可拖动）+ 关闭按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_drag_handle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="鱼眼矫正"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="×"
            android:textSize="16sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <!-- 摄像头选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btn_cam_front"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="前"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_accent"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cam_back"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="后"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btn_cam_left"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="左"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btn_cam_right"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="右"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <!-- K1 (主畸变系数) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="K1 强度"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_k1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_k1"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- K2 (二次畸变系数) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="K2 细调"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_k2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_k2"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Zoom (矫正后缩放) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="缩放"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_zoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_zoom"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="1.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- CenterX (畸变中心X) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="中心X"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_center_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_center_x"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.50"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- CenterY (畸变中心Y) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="中心Y"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seek_center_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="600dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_center_y"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0.50"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="恢复默认"
            android:textSize="14sp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_reset_all"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="全部重置"
            android:textSize="14sp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

</LinearLayout>
