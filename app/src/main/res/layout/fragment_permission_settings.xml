<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="←"
            android:textSize="18sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="权限设置"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 权限列表 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 提示文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请确保以下权限已授予，以保证应用正常运行"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- ========== 基础权限 ========== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础权限"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 相机权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相机权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_camera_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于录制视频和拍照"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_camera_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 麦克风权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="麦克风权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_microphone_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于录制视频时录音"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_microphone_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 存储权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="存储权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_storage_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于保存和读取视频、照片"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_storage_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 通知权限（Android 13+） -->
            <LinearLayout
                android:id="@+id/layout_notification_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通知权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_notification_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于显示录制状态通知"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_notification_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- ========== 高级权限 ========== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高级权限"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 所有文件访问权限（Android 11+） -->
            <LinearLayout
                android:id="@+id/layout_all_files_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所有文件访问权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_all_files_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于访问U盘公共目录"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_all_files_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 悬浮窗权限 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="悬浮窗权限"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_overlay_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于悬浮窗和后台唤醒"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_overlay_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 无障碍服务 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无障碍服务（非必要）"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_accessibility_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用于防止应用被系统清理"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_accessibility_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去启用"
                    android:textSize="14sp"
                    android:minHeight="40dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text" />
            </LinearLayout>

            <!-- 权限说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="权限说明"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 相机、麦克风、存储：核心功能必需权限\n\n• 通知权限：用于在后台录制时显示状态通知\n\n• 所有文件访问：仅当需要存储到U盘时授予\n\n• 悬浮窗权限：用于悬浮录制按钮和后台钉钉命令唤醒\n\n• 无障碍服务：可防止应用被系统清理，但非必要"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
