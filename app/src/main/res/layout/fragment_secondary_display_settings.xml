<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="补盲选项"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⌂"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 补盲功能全局开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补盲功能总开关"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_blind_spot_global_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭后所有补盲子功能将不生效"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_blind_spot_global"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- 以下为子功能区域，受全局开关控制 -->
            <LinearLayout
                android:id="@+id/blind_spot_sub_features_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- 实验室入口 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实验室（不建议使用）"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包含主屏悬浮窗、复用主屏等实验性选项"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btn_open_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="进入实验室"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/button_accent"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 补盲画面矫正 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补盲画面矫正"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对补盲悬浮窗画面进行平移/缩放矫正 (Matrix)"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_blind_spot_correction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_adjust_blind_spot_correction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="调整矫正参数 (四路独立)"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/button_accent"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 主屏悬浮窗比例锁定 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主屏悬浮窗比例锁定"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="勾选后悬浮窗只能等比例缩放，不可自由调整长宽比"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_main_floating_aspect_ratio_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_reset_main_floating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重置主屏悬浮窗 (恢复默认位置和大小)"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/button_accent"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 转向灯联动设置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转向灯联动 (左右补盲)"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启转向灯时自动弹出对应侧摄像头画面"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_turn_signal_linkage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 悬浮窗动效开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="悬浮窗开启动效"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关闭后悬浮窗无动画直接显示，但仍等待画面就绪"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_floating_window_animation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 消失延迟设置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="消失延迟"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_turn_signal_timeout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="30" />

                    <TextView
                        android:id="@+id/tv_turn_signal_timeout_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="10s"
                        android:gravity="end"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- 触发log预设方案 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补盲触发方案"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rg_turn_signal_preset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_preset_car_api"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:text="银河E5/26款星舰7-API触发"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/rb_preset_xinghan7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:text="26款星舰7-Logcat触发"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/rb_preset_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:text="自定义Logcat触发"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/rb_preset_l6l7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:text="银河L6/L7（由抖音@AbuCoder适配）"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/rb_preset_boyue_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:text="博越L（涛仔求来的）"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:buttonTint="@color/colorPrimary" />

                    </RadioGroup>

                    <!-- CarAPI 连接状态 -->
                    <TextView
                        android:id="@+id/tv_car_api_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CarAPI 服务状态: 检测中..."
                        android:textSize="14sp"
                        android:paddingStart="32dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- 触发log关键字 -->
                <LinearLayout
                    android:id="@+id/layout_turn_signal_custom_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="左转向灯触发log关键字"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="6dp" />

                    <EditText
                        android:id="@+id/et_turn_signal_left_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:maxLines="3"
                        android:gravity="center_vertical"
                        android:background="@drawable/spinner_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="右转向灯触发log关键字"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="6dp" />

                    <EditText
                        android:id="@+id/et_turn_signal_right_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:maxLines="3"
                        android:gravity="center_vertical"
                        android:background="@drawable/spinner_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 桌面悬浮模拟按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="桌面悬浮模拟按钮"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="回到桌面点击左/右按钮，触发补盲 (3秒)"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_mock_floating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="副屏补盲显示"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补盲激活时在副屏显示悬浮窗画面"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_secondary_blind_spot_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_adjust_secondary_blind_spot_window"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="调整副屏悬浮窗位置"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/button_accent"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 车门联动设置 -->
            <LinearLayout
                android:id="@+id/ll_door_linkage_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车门联动 (左右补盲)"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启车门时自动弹出对应侧摄像头画面（复用转向联动的配置）"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_door_linkage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- 全景影像避让 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全景影像避让"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EVCam本体和指定Activity在前台时自动隐藏主屏补盲窗口"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_avm_avoidance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_avm_avoidance_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="避让Activity完整类名"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="6dp" />

                    <EditText
                        android:id="@+id/et_avm_avoidance_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:maxLines="2"
                        android:gravity="center_vertical"
                        android:background="@drawable/spinner_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:hint="com.geely.avm_app.AvmRenderActivity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="填写 all 则在所有界面上主屏补盲都不显示，仅副屏正常工作"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            </LinearLayout> <!-- end blind_spot_sub_features_container -->

