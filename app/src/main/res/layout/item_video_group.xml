<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- 缩略图（四宫格预览） -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:background="#000000">

            <!-- 2x2 网格缩略图 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumb_front"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="#1A1A1A"
                        android:contentDescription="前置" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333" />

                    <ImageView
                        android:id="@+id/thumb_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="#1A1A1A"
                        android:contentDescription="后置" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumb_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="#1A1A1A"
                        android:contentDescription="左侧" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333" />

                    <ImageView
                        android:id="@+id/thumb_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="#1A1A1A"
                        android:contentDescription="右侧" />
                </LinearLayout>
            </LinearLayout>

            <!-- 视频路数标签 -->
            <TextView
                android:id="@+id/video_count_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="#80000000"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:text="4路" />
        </FrameLayout>

        <!-- 视频信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- 日期 -->
            <TextView
                android:id="@+id/video_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="2026-01-31" />

            <!-- 时间 -->
            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="12:54" />

            <!-- 文件大小 -->
            <TextView
                android:id="@+id/video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:text="69.94 MB" />
        </LinearLayout>

        <!-- 选中指示器（多选模式用） -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/check_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:checked="true"
            android:visibility="gone"
            android:contentDescription="选中" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
